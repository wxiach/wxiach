---
import { cn } from "@/lib/utils";

interface Props {
  class?: string;
  date: Date;
}

const { class: className, date } = Astro.props as Props;

const day = date.toLocaleDateString("zh-CN", { day: "numeric" });
const month = date.toLocaleDateString("zh-CN", { month: "short" });
const year = date.toLocaleDateString("zh-CN", { year: "numeric" });
---

<span class={cn("inline-flex items-center gap-1.5 text-xs tabular-nums tracking-tight", className)}>
  <span class="text-zinc-500">{month}{day}</span>
  <span class="text-zinc-500">Â·</span>
  <span class="text-zinc-400">{year}</span>
</span>
