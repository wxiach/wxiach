---
import { cn } from "@/lib/utils";

interface Props {
  class?: string;
  date: Date;
}

const { class: className, date } = Astro.props as Props;

// 分别获取月日和年份
const monthDay = date.toLocaleDateString("zh-CN", { month: "short", day: "numeric" });
const year = date.toLocaleDateString("zh-CN", { year: "numeric" });
---

<span class={cn(className, "inline-flex items-center gap-1.5 text-xs tabular-nums tracking-tight")}>
  <span class="font-normal text-zinc-500 dark:text-zinc-400">{monthDay}</span>
  <span class="text-zinc-300 dark:text-zinc-700">·</span>
  <span class="font-light text-zinc-400 dark:text-zinc-500">{year}</span>
</span>
