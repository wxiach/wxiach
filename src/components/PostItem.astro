---
import DateFormatter from "@/components/DateFormatter.astro";
import Category from "@/components/Category.astro";

type Props = {
  id: string;
  data: {
    date: Date;
    title: string;
    category?: string;
  };
};

const { id, data } = Astro.props as Props;
---

<li class="group relative list-none border-b border-zinc-200 py-3">
  <div class="mb-1 flex items-center">
    <DateFormatter date={data.date} />
  </div>
  <div class="flex items-center justify-between py-1">
    <h3>
      <a href={`/posts/${id}`} class="relative inline-block text-zinc-900">
        {data.title}
        <span
          class="absolute top-0 bottom-0 -left-3 w-0.5 origin-bottom scale-y-0 bg-zinc-200 transition-transform duration-200 group-hover:scale-y-100"
        ></span>
      </a>
    </h3>
    <Category category={data.category} />
  </div>
</li>
