---
import { site } from "@/consts";
import { cn } from "@/lib/utils";
---

<nav class="flex gap-3">
  {
    site.nav.map(({ name, url }, index) => (
      <>
        {index != 0 && <span class="text-zinc-400">/</span>}
        <a
          href={url}
          class="group relative inline-block cursor-pointer hover:cursor-pointer"
          target="_blank"
          rel="noopener noreferrer"
        >
          <span class="font-medium text-zinc-700 transition-colors duration-200 group-hover:text-zinc-900">
            {name}
          </span>
          <span
            class={cn(
              "absolute bottom-0 left-0 h-0.5 w-0 rounded-xs bg-zinc-400",
              "transition-all duration-300",
              "group-hover:right-auto group-hover:left-0 group-hover:w-full"
            )}
          />
        </a>
      </>
    ))
  }
</nav>
