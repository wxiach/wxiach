---
import { site } from "@/consts";
import { cn } from "@/lib/utils";
---

<nav class="flex gap-2">
  {
    site.nav.map(({ name, url }, index) => (
      <>
        {index != 0 && <span>/</span>}
        <a href={url} class="group relative inline-block" target="_blank" rel="noopener noreferrer">
          <span>{name}</span>
          <span
            class={cn(
              "absolute bottom-0 left-0 h-0.5 w-0 rounded-xs bg-zinc-500",
              "transition-all duration-300",
              "group-hover:right-auto group-hover:left-0 group-hover:w-full"
            )}
          />
        </a>
      </>
    ))
  }
</nav>
