---
import { Image } from "astro:assets";
import avatar from "@/assets/avatar.png";
import { cn } from "@/lib/utils";

interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<Image
  class={cn(
    className,
    "size-32 rounded-full object-over border-4 border-zinc-100 cursor-pointer hover:cursor-pointer",
    "ransition-transform duration-2000 ease-in-out",
    "hover:rotate-[360deg]"
  )}
  src={avatar}
  alt="avatar"
/>
