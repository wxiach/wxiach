---
import { site } from "@/consts";
import ThemeToggle from "./ThemeToggle.astro";
---

<footer class="mt-24 flex flex-col items-center text-xs text-zinc-400 dark:text-zinc-500">
  <!-- Theme toggle at the top of footer -->
  <div class="mb-8 flex justify-center">
    <ThemeToggle />
  </div>

  <!-- Simplified minimal divider -->
  <div class="mb-8 flex w-full max-w-xs items-center justify-center">
    <div class="h-px w-full bg-zinc-200 dark:bg-zinc-800"></div>
  </div>

  <div class="flex flex-col items-center gap-4 font-light tracking-wide">
    <p class="flex items-center gap-2">
      <span class="text-zinc-300 dark:text-zinc-700">&#169;</span>
      <span>{new Date().getFullYear()}</span>
      <span class="text-zinc-300 dark:text-zinc-700">&#8226;</span>
      <span class="font-normal text-zinc-500 dark:text-zinc-400">{site.author}</span>
    </p>

    <p class="flex flex-wrap items-center justify-center gap-2 text-center">
      <span>Content licensed under</span>
      <a
        class="group relative font-normal text-zinc-500 transition-all duration-200 hover:text-zinc-700 dark:text-zinc-400 dark:hover:text-zinc-300"
        href="https://creativecommons.org/licenses/by-nc-sa/4.0/"
        target="_blank"
        rel="noopener noreferrer"
      >
        <span class="relative z-10">CC BY-NC-SA 4.0</span>
        <span
          class="absolute -bottom-0.5 left-0 h-px w-full scale-x-0 bg-zinc-400 transition-transform duration-200 group-hover:scale-x-100 dark:bg-zinc-500"
        ></span>
      </a>
    </p>
  </div>
</footer>
