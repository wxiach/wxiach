---
import BaseHead from "@components/BaseHead.astro";

import "lxgw-wenkai-lite-webfont";

import { site } from "@consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={site.title} description={site.description} />
  </head>
  <body
    class="h-screen bg-[#fffffe] dark:bg-[#0f0e17] text-[#0f0e17] dark:text-[#fffffe]"
  >
    <header
      class="container mx-auto backdrop-blur-xl dark:border-white/5 sticky top-0"
    >
      <slot name="header" />
    </header>
    <main class="max-w-screen-md mx-auto p-4">
      <slot />
    </main>
    <footer class="max-w-screen-md mx-auto p-4">
      <slot name="footer" />
    </footer>
  </body>
</html>
