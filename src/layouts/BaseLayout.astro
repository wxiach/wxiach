---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import "lxgw-wenkai-lite-webfont";

import { SITE_TTITLE, SITE_DESCRIPTION, AUTHOR } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TTITLE} description={SITE_DESCRIPTION} />
  </head>
  <body
    class="h-screen bg-[#fffffe] dark:bg-[#0f0e17] text-[#0f0e17] dark:text-[#fffffe]"
  >
    <Header title={SITE_TTITLE} />
    <main class="max-w-screen-md m-auto p-4">
      <slot name="main" />
    </main>
    <Footer author={AUTHOR} />
  </body>
</html>
