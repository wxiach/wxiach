---
import { getCollection } from "astro:content";
import BaseLayout from "@/layouts/Layout.astro";

const posts = (await getCollection("post")).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

const generateExcerpt = (content: string | undefined) => {
  if (!content) return "";
  const excerpt = content
    .replace(/[#*_`]/g, "")
    .slice(0, 200)
    .trim();
  return content.length > 200 ? `${excerpt}...` : excerpt;
};
---

<BaseLayout>
  <section class="flex flex-col items-center gap-y-6">
    {
      posts.map(({ id, data, body }) => () => (
        <div class="max-w-screen-sm">
          <h2 class="text-2xl">{data.title}</h2>
          <p class="text-[#a7a9be]">{data.date.toLocaleDateString()}</p>
          <p>{generateExcerpt(body)}</p>
        </div>
      ))
    }
  </section>
</BaseLayout>
